# Notion API Configuration
# Get your token from: https://www.notion.so/my-integrations
NOTION_TOKEN=your_notion_integration_token_here

# Notion Database ID
# This is the ID of your Notion database used as the blog content source
NOTION_DATASOURCE_ID=your_notion_database_id_here

# Qiita API Configuration (Optional)
# If not set, only Notion posts will be displayed
# Get your access token from: https://qiita.com/settings/tokens/new
QIITA_USER_ID=your_qiita_user_id_here
QIITA_ACCESS_TOKEN=your_qiita_access_token_here

# Blog History Configuration (Optional)
# Number of years to fetch blog posts from (default: 5)
BLOG_HISTORY_YEARS=5
